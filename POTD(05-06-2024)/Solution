class Solution {
    public long findSwapValues(long[] a, int n, long[] b, int m) {
        // Calculate the sum of elements in both arrays
        long suma = 0, sumb = 0;
        for (int i = 0; i < n; i++) suma += a[i];
        for (int i = 0; i < m; i++) sumb += b[i];

        // If the difference between the sums is odd, there exists no pair that can be swapped
        if ((suma - sumb) % 2 != 0) return -1;

        // Find the value that needs to be added/subtracted
        long target = (suma - sumb) / 2;

        int i = 0, j = 0;

        // Sort both arrays
        Arrays.sort(a);
        Arrays.sort(b);

        // Iterate through both arrays simultaneously
        while (i < n && j < m) {
            long diff = a[i] - b[j];
            if (diff == target) return 1;
            else if (diff < target) i++;
            else j++;
        }

        // If no pair is found, return -1
        return -1;
    }
}
